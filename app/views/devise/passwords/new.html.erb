<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading"><h3>Forgot your password?</h3></div>
  		<div class="panel-body">

			<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "form-horizontal" }) do |f| %>
			  <%= devise_error_messages! %>

			  <div class="form-group">
			  	<%= f.label :email, class: "col-sm-2 control-label" %>
			  	<div class="col-sm-8"><%= f.email_field :email, autofocus: true, class: "form-control" %></div>
			  </div>

			  <div class="form-group">
				  <div class="col-sm-offset-2 col-sm-10">
				  	<%= f.submit "Send me reset password instructions", class: "btn btn-default" %>
				  </div>
		  	  </div>
			<% end %>

		</div>
		
		<div class="panel-footer"><%= render "devise/shared/links" %></div>
	</div>
</div>