<%= form_for(@post, html: {class: "form-horizontal", multipart: true}) do |f| %>
      
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :image, class: "col-sm-2 control-label" %>
    <div class="col-sm-8"><%= f.file_field :image, class: "form-control" %></div>
  </div>

  <div class="form-group">
    <%= f.label :title, class: "col-sm-2 control-label" %>
    <div class="col-sm-8"><%= f.text_field :title, autofocus: true, class: "form-control" %></div>
  </div>

  <div class="form-group">
    <%= f.label :tags, class: "col-sm-2 control-label" %>
    <div class="col-sm-8"><%= f.text_field :tags, class: "form-control" %></div>
  </div>

  <div class="form-group">
    <%= f.label :content, class: "col-sm-2 control-label" %>
    <div class="col-sm-8"><%= f.text_area :content, class: "form-control", rows: 15 %></div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Submit",  class: "btn btn-default" %>
      </div>
    </div>

<% end %>