<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
          <h3><%= @post.title %></h3>
          <%= "<p class='author pull-left'>By: #{@post.user.email}</p>".html_safe if @post.user %>
          <% if @post.user == current_user && ! current_user.blank? %>
            <div class="pull-right">
              <!-- <%= link_to 'Show', @post %> | -->
              <%= link_to 'Edit', edit_post_path(@post) %> |
              <%= link_to 'Destroy', @post, method: :delete, data: { confirm: 'Are you sure?' } %>
            </div>
          <% end %>
        </div>
  		<div class="panel-body">
  			<%= image_tag @post.image.url(:medium) unless @post.image.nil? %>
  			<%= @post.content %>
		</div>

		<% unless @post.tags.empty? %>
          <div class="panel-footer">
              <span class='tags'>
              <% @post.tags.split(",").each { |e| %>
                <span class='btn btn-info btn-xs'><%= e %></span>
              <% } %>
              </span>
              <%= link_to 'Back', posts_path, class: "pull-right" %>
          </div>
        <% end %>
	</div>
</div>
	
