<div class="container">
	<div class="panel panel-default">
		<div class="panel-heading">
			<h3><%= @post.title %></h3>
			<p>Tags: <%= @post.tags %></p>
		</div>
  		<div class="panel-body">
  			<%= @post.content %>
		</div>

		<div class="panel-footer">
			<%= link_to 'Edit', edit_post_path(@post) %> |
			<%= link_to 'Back', posts_path %>
		</div>
	</div>
</div>
	
